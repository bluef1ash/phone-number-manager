<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.phonenumbermanager.mapper.UserRoleRelationMapper">
    <resultMap type="com.github.phonenumbermanager.entity.UserRoleRelation" id="baseResultMap">
        <id column="user_id" property="userId"/>
        <id column="role_id" property="roleId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <delete id="deleteByUserRoleRelation">
        DELETE FROM `pm_user_role`
        <where>
            <if test="userId != null">
                `user_id` = #{userId}
            </if>
            <if test="roleId != null">
                AND `role_id` = #{roleId}
            </if>
            <if test="createTime != null">
                AND `create_time` = #{createTime}
            </if>
            <if test="updateTime != null">
                AND `update_time` = #{updateTime}
            </if>
        </where>
    </delete>
</mapper>
